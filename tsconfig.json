{
	"compilerOptions": {
		"allowJs": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noLib": false,
		"removeComments": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"lib": ["es2017", "dom", "esnext.asynciterable"],
		"target": "es2017",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "dist/",
		"sourceRoot": ".",
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/@counterfactual/typescript-typings/types",
			"./node_modules/ethers/index.d.ts",
			"./node_modules/json-d-ts"
		],
		"strict": true
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
