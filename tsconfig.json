{
	"compilerOptions": {
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist/",
		"sourceRoot": ".",
		"typeRoots": ["./node_modules/@types", "./node_modules/json-d-ts"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
