{
	"compilerOptions": {
		"moduleResolution": "node",
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"allowJs": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"typeRoots": [
			"./node_modules/@types",
      "./node_modules/json-d-ts"
		]
	},
	"include": [
		"src/**/*",
		"src/*",
		"test/*.ts",
		"examples/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
    ]
}
