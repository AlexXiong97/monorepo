{
  "name": "@counterfactual/monorepo",
  "private": true,
  "engines": {
    "node": ">=6.12"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
		"precommit": "wsrun precommit $PKG --fast-exit -r --exclude-missing",
		"test": "wsrun test $PKG --exclude-missing",
    "build": "wsrun build $PKG --fast-exit -r --serial",
    "clean": "wsrun clean $PKG --fast-exit -r --parallel",
    "coverage": "wsrun coverage $PKG --exclude-missing",
    "ganache": "ganache-cli -p 8545 --networkId 50 -m \"${npm_package_config_mnemonic}\"",
    "lint": "wsrun lint $PKG --exclude-missing",
    "prettier": "wsrun prettier $PKG --exclude-missing",
    "rebuild": "run-s clean build"
	},
  "config": {
    "mnemonic": "concert load couple harbor equip island argue ramp clarify fence smart topic"
  },
  "devDependencies": {
    "lerna": "2.11.0",
    "npm-run-all": "^4.1.3",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "2.9.2",
		"wsrun": "2.2.0",
		"husky": "0.14.3"
  }
}
