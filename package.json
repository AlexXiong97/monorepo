{
	"name": "@counterfactual/machine",
	"version": "0.0.1",
	"description": "",
	"main": "dist/index.js",
	"author": "",
	"license": "ISC",
	"scripts": {
		"install:contracts_deps": "./build_scripts/build_monorepo_dependencies",
		"preinstall": "npm run install:contracts_deps",
		"test": "npm run build && npm run ganache && sleep 5 && jest && npm run ganache:stop",
		"test-debug": "tsc && node --inspect-brk jest --runInBand  --detectOpenHandles --forceExit",
		"ganache": "ganache-cli --gasLimit 0xfffffffffff --port 9545 --account=\"${npm_package_config_unlockedAccount1}\",\"${npm_package_config_balance}\" --account=\"${npm_package_config_unlockedAccount2}\",\"${npm_package_config_balance}\" --account=\"${npm_package_config_unlockedAccount3}\",\"${npm_package_config_balance}\" -m \"${npm_package_config_mnemonic}\" &",
		"ganache:stop": "ps aux | grep ganache-cli | grep -v grep | awk '{print $2}' | xargs kill -9",
		"build": "tsc",
		"coverage": "jest --coverage",
		"lint": "tslint -c tslint.json -p tsconfig.json",
		"lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
		"prettier": "prettier -l 'src/*/**'",
		"prettier-run": "prettier --write 'src/*/**'"
	},
	"config": {
		"unlockedAccount1": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257d",
		"unlockedAccount2": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257e",
		"unlockedAccount3": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257f",
		"balance": "1000000000000000000000000",
		"mnemonic": "concert load couple harbor equip island argue ramp clarify fence smart topic"
	},
	"devDependencies": {
		"@types/jest": "^23.1.1",
		"coveralls": "3.0.1",
		"ganache-cli": "^6.1.6",
		"jest": "^23.1.0",
		"prettier": "1.14.0",
		"rollup": "^0.60.0",
		"rollup-plugin-json": "^3.0.0",
		"rollup-plugin-node-resolve": "^3.3.0",
		"ts-jest": "^22.4.6",
		"ts-node": "^6.1.2",
		"tslint": "5.11.0",
		"tslint-config-prettier": "1.14.0",
		"tslint-plugin-prettier": "1.3.0",
		"typescript": "^2.9.2"
	},
	"dependencies": {
		"@counterfactual/configs": "0.0.1",
		"@counterfactual/contracts": "0.0.2",
		"@counterfactual/test-utils": "0.0.1",
		"@counterfactual/typescript-typings": "1.0.0",
		"ethers": "4.0.0-beta.5",
		"package.json": "^2.0.1"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules",
			"tmp",
			"dist"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"testURL": "http://localhost/"
	}
}
