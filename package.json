{
  "name": "@counterfactual/machine",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf jest-cache build dist && cd contracts && yarn clean",
    "build": "tsc -p tsconfig.json",
    "docker:run": "docker-compose up -d machine && yarn test:buildContracts",
    "docker:build": "docker-compose build",
    "shell": "docker-compose run machine sh",
    "test": "docker-compose exec machine sh /machine/bin/test",
    "test:buildContracts": "docker-compose exec machine /bin/sh -c \"cd contracts && yarn && yarn build\"",
    "test:deployContracts": "docker-compose exec machine sh /machine/bin/deploy_contracts",
    "test:jest": "./node_modules/.bin/jest --runInBand --detectOpenHandles --bail",
    "test-debug:jest": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:ci": "yarn test:deployContracts && yarn test",
    "ganache": "ganache-cli --gasLimit 0xfffffffffff --port 9545",
    "ganache:stop": "ps aux | grep ganache-cli | grep -v grep | awk '{print $2}' | xargs kill -9",
    "rollup": "tsc && ./scripts/rollup.sh",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettier": "prettier -l '{src,test,cf.js}/{**/*,*}'",
    "prettier:fix": "prettier --write '{src,test,cf.js}/{**/*,*}'"
  },
  "config": {
    "unlockedAccount0": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257d",
    "unlockedAccount1": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257e",
    "unlockedAccount2": "0xf2f48ee19680706196e2e339e5da3491186e0c4c5030670656b0e0164837257f",
    "etherBalance": "1000000000000000000000000"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.3",
    "chai": "^4.2.0",
    "coveralls": "3.0.1",
    "ganache-cli": "^6.1.6",
    "jest": "^23.5.0",
    "lodash": "^4.17.10",
    "prettier": "1.14.0",
    "rollup": "0.63.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "ts-jest": "^23.1.4",
    "ts-node": "^6.1.2",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "3.1.1"
  },
  "dependencies": {
    "@counterfactual/configs": "https://github.com/counterfactual/configs.git#dc5d086",
    "@counterfactual/test-utils": "https://github.com/counterfactual/test-utils.git",
    "@counterfactual/typescript-typings": "https://github.com/counterfactual/typescript-typings.git",
    "ethers": "4.0.1",
    "sha3": "^1.2.2"
  },
  "prettier": {
    "useTabs": false
  },
  "jest": {
    "verbose": false,
    "bail": true,
    "cacheDirectory": "jest-cache",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.spec.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "src",
      "node_modules",
      "dist"
    ],
    "roots": [
      "test"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost/",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
