{
    "extends": "solium:all",
    "rules": {
        "function-order": "off",
        "imports-on-top": 1,
        "variable-declarations": 1,
        "array-declarations": 1,
        "operator-whitespace": 1,
        "lbrace": 1,
        "mixedcase": 0,
        "camelcase": 1,
        "uppercase": 1,
        "no-empty-blocks": 1,
        "no-unused-vars": 1,
        "quotes": 1,
        "indentation": ["error", "tab"],
        "arg-overflow": ["error", 8],
        "whitespace": 1,
        "deprecated-suicide": 1,
        "pragma-on-top": 1,
		"no-experimental": 0
    }
}
